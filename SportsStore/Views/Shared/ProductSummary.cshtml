@model Product

<div class="panel panel-primary">
    <div class="panel-heading"><h4 class="panel-title">@Model.Name</h4></div>
    <div class="panel-body">
        <div class="col-sm">@Model.Price.ToString("c")</div>
        <div class="col-sm">@Model.Description</div>
        <form id="@Model.ProductID" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="ProductID"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
            <button type="submit" class="btn btn-success">
                Добавить в корзину
            </button>
        </form>
    </div>
</div>

